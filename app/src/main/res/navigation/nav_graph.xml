<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.campus_positioning_system.Fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_roomSelectionFragment"
            app:destination="@id/roomSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomSelectionFragment"
        android:name="com.example.campus_positioning_system.Fragments.RoomSelectionFragment"
        android:label="fragment_room_selection"
        tools:layout="@layout/fragment_room_selection" >
        <action
            android:id="@+id/action_roomSelectionFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>