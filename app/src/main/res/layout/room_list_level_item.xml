<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@drawable/bottom_nav_corners_secondary_grey"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginStart="15dp"
    android:elevation="8dp">


    <ImageView
        android:id="@+id/room_list_level_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:src="@drawable/ic_baseline_house_24" />

    <TextView
        android:id="@+id/room_list_level_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/room_list_level_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>